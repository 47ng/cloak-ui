{
  "name": "@47ng/cloak-ui",
  "version": "0.0.0-semantically-released",
  "description": "Companion web UI for @47ng/cloak",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/cloak-ui"
  },
  "scripts": {
    "dev": "next",
    "build": "run-s build:*",
    "build:next": "next build",
    "build:export": "next export",
    "analyze": "ANALYZE=true next build",
    "ci": "run-s build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@47ng/chakra-next": "^3.0.0-beta.4",
    "@47ng/cloak": "^1.1.0",
    "@47ng/codec": "^1.0.1",
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "dayjs": "^1.10.7",
    "framer-motion": "^5.4.5",
    "next": "^12.0.7",
    "next-seo": "^4.28.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-table": "^7.7.0",
    "vegemite": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@mdx-js/loader": "^1.6.22",
    "@next/bundle-analyzer": "^12.0.7",
    "@next/mdx": "^12.0.7",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/react-table": "^7.7.9",
    "@types/webpack": "^5.28.0",
    "@zeit/next-source-maps": "^0.0.3",
    "commitlint": "^15.0.0",
    "dotenv": "^10.0.0",
    "husky": "7.x",
    "jest": "^27.4.4",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.7.2",
    "webpack": "^5"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
